<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:paddingTop="10dp"
        android:src="@drawable/down_arrow"
        app:layout_constraintEnd_toEndOf="@id/swipeUp_menu_viewPager"
        android:onClick="backButtonPressed"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/swipeUp_menu_viewPager"
        android:layout_width="match_parent"
        android:layout_height="400dp"/>

    <!--Bottom section-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="400dp"
        android:background="@color/white"
        android:orientation="vertical">

        <!--First Group-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <!--First Block-->
            <LinearLayout
                android:id="@+id/info"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="60"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:text="32,99 Â£"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/producer"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="32dp"
                    android:layout_weight="1"
                    android:text="Massimo Dutti"
                    android:textColor="@color/dark_grey" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:background="@color/dark_grey"/>

            <!--Second block-->
            <LinearLayout
                android:id="@+id/Guidataglie"
                android:layout_width="159dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_weight="1"
                    android:text="@string/taglie"
                    android:textAlignment="center"
                    android:textColor="@color/black" />
            </LinearLayout>

        </LinearLayout>

        <!--First horizontal divider-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dark_grey"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>

        <!--Second Group-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <!--First Block-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Spinner
                    android:id="@+id/color_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Base.Widget.AppCompat.TextView.SpinnerItem"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:popupBackground="@color/white"
                    android:textAlignment="center"/>

            </RelativeLayout>


            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:background="@color/dark_grey"/>

            <!--Second Block-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Spinner
                    android:id="@+id/taglia_spinner"
                    android:layout_width="wrap_content"
                    style="@style/Base.Widget.AppCompat.TextView.SpinnerItem"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:popupBackground="@color/white"
                    android:layout_centerVertical="true"
                    android:textAlignment="center"/>

            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dark_grey"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>

        <!--Last Group-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:background="@color/buy_green"
                android:text="@string/buy_text" />

        </RelativeLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>