<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_marginTop="48dp">

    <ImageView
        android:id="@+id/swipe_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@drawable/top_bar_grad">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giacomo Miele"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:fontFamily=""
            android:textSize="16dp"
            android:id="@+id/swipe_friend"
            android:layout_marginLeft="4dp"
            android:layout_alignBottom="@id/swiped"
            android:textColor="@android:color/background_light"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" + 200k"
            android:fontFamily=""
            android:textSize="14dp"
            android:id="@+id/swipe_number"
            android:layout_alignBottom="@id/swiped"
            android:layout_toRightOf="@id/swipe_friend"
            android:textColor="@android:color/background_light"/>


        <ImageView
            android:id="@+id/swiped"
            android:layout_width="36dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/swipe_friend"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/swiped" />
    </RelativeLayout>

</RelativeLayout>